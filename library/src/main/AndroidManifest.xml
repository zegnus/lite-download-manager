<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="com.novoda.litedownloadmanager">

  <uses-permission android:name="android.permission.INTERNET" />

  <uses-permission
    android:name="android.permission.WRITE_EXTERNAL_STORAGE"
    android:maxSdkVersion="18" />

  <application
    android:allowBackup="true"
    android:label="@string/app_name"
    android:supportsRtl="true">

    <service android:name="com.novoda.litedownloadmanager.DownloadService" />

    <provider
      android:name="com.novoda.litedownloadmanager.DatabaseDownloadPersistence$ContentProvider"
      android:authorities="com.novoda.litedownloadmanager"
      android:exported="false"
      android:syncable="false" />

  </application>

</manifest>
